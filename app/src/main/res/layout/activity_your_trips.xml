<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing_background"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="@string/back_button_description"
        android:layout_marginBottom="16dp" />

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp">

            <View
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/feature_icon_bg" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_globe"
                android:contentDescription="@string/your_trips" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_trips_title"
            android:textSize="24sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Twoje zaplanowane wyjazdy"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Trips List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tripsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

    <!-- No Trips Message -->
    <LinearLayout
        android:id="@+id/noTripsLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/feature_icon_bg" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_airplane"
                android:alpha="0.5" />

        </FrameLayout>

        <TextView
            android:id="@+id/noTripsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_trips_yet"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:gravity="center" />

    </LinearLayout>

    <!-- Add New Trip Button -->
    <Button
        android:id="@+id/addNewTripButton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="@string/add_new_trip"
        android:background="@drawable/button_primary_landing"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:elevation="4dp"
        android:layout_marginTop="16dp" />

</LinearLayout>
