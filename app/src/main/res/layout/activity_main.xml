<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing_background"
    tools:context=".MainActivity">

    <!-- ========== TOP SECTION - Logo & Title ========== -->
    <LinearLayout
        android:id="@+id/heroSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="32dp"
        android:paddingHorizontal="24dp">

        <!-- Logo -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/logo_background" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_travel_buddy_logo"
                android:contentDescription="@string/logo_description" />

        </FrameLayout>

        <!-- App Title -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travel "
                android:textSize="36sp"
                android:textColor="@color/text_primary"
                android:fontFamily="serif"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buddy"
                android:textSize="36sp"
                android:textColor="@color/red_primary"
                android:fontFamily="serif"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <!-- Tagline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_tagline_short"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- ========== MIDDLE SECTION - Features ========== -->
    <LinearLayout
        android:id="@+id/featuresSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heroSection"
        android:layout_above="@id/ctaSection"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="24dp">

        <!-- Feature 1: Plan -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="6dp">
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/feature_icon_bg" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_globe"
                    android:contentDescription="@string/feature_plan_title" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature_plan_title"
                android:textSize="13sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature_plan_desc"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:gravity="center" />

        </LinearLayout>

        <!-- Feature 2: Weather -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="6dp">
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/feature_icon_bg" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_weather"
                    android:contentDescription="@string/feature_weather_title" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature_weather_title"
                android:textSize="13sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature_weather_desc"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:gravity="center" />

        </LinearLayout>

        <!-- Feature 3: Packing -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="6dp">
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/feature_icon_bg" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_suitcase"
                    android:contentDescription="@string/feature_packing_title" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature_packing_title"
                android:textSize="13sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature_packing_desc"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- ========== BOTTOM SECTION - CTA Buttons ========== -->
    <LinearLayout
        android:id="@+id/ctaSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        android:paddingBottom="32dp"
        android:paddingTop="16dp">

        <!-- User icon -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp">
            <View
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/user_icon_bg" />
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_user"
                android:contentDescription="@string/user_icon_description" />
        </FrameLayout>

        <!-- CTA Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cta_title"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cta_subtitle"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="20dp" />

        <!-- Login Button -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_primary_landing"
            android:text="@string/login_button"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:elevation="4dp" />

        <!-- Register Button -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/button_outline_landing"
            android:text="@string/register_button"
            android:textAllCaps="false"
            android:textColor="@color/red_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
