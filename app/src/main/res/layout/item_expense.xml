<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_medium"
    style="@style/CustomCard"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium"
        android:background="@color/card_background">

        <TextView
            android:id="@+id/expenseCategoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.TravelBuddy.BodySecondary"
            android:text="Kategoria"
            android:textSize="@dimen/text_size_small"
            android:layout_marginBottom="@dimen/spacing_tiny" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/expenseNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/TextAppearance.TravelBuddy.Body"
                android:text="Nazwa wydatku"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/expenseAmountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.TravelBuddy.Title"
                android:text="0 zÅ‚"
                android:textSize="@dimen/text_size_large"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

