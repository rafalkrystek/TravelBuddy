<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_small"
    style="@style/CustomCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/card_padding"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/restaurantNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nazwa restauracji"
                style="@style/TextAppearance.TravelBuddy.Body"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/restaurantAddressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adres restauracji"
                style="@style/TextAppearance.TravelBuddy.BodySecondary"
                android:layout_marginTop="@dimen/spacing_tiny" />

            <TextView
                android:id="@+id/restaurantRatingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â­ 4.5"
                style="@style/TextAppearance.TravelBuddy.Body"
                android:layout_marginTop="@dimen/spacing_small"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/favoriteButton"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:src="@android:drawable/btn_star_big_off"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Zapisz do ulubionych"
            android:layout_gravity="center_vertical"
            app:tint="?attr/colorPrimary" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

